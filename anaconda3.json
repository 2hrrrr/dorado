{
    "version": "4.4.0",
    "homepage": "https://www.anaconda.com/",
    "license": "BSD 3-Clause",
    "checkver": {
        "url": "https://repo.continuum.io/archive",
        "re": "Anaconda3-([\\d.]+)-Windows"
    },
    "architecture": {
        "64bit": {
            "url": "https://repo.continuum.io/archive/Anaconda3-4.4.0-Windows-x86_64.exe",
            "hash": "md5:aa200a1c059a551e0ba9a5314a9554a5"
        },
        "32bit": {
            "url": "https://repo.continuum.io/archive/Anaconda3-4.4.0-Windows-x86.exe",
            "hash": "md5:c7a66350b79354773dabbbef6f58a3af"
        }
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://repo.continuum.io/archive/Anaconda3-$version-Windows-x86_64.exe"
            },
            "32bit": {
                "url": "https://repo.continuum.io/archive/Anaconda3-$version-Windows-x86.exe"
            }
        },
        "hash": {
            "url": "$baseurl",
            "find": "$basename<.*\\s+<.*\\s+<.*\\s+<td>([a-fA-F0-9]{32})</td>"
        }
    },
    "installer": {
        "args":[
            "/S",
            "/InstallationType=JustMe",
            "/RegisterPython=0",
            "/AddToPath=0",
            "/D=$dir"
            ]
    },
    "uninstaller":{
        "file":"Uninstall-Anaconda.exe",
        "args":[
            "/S"
        ]
    },
    "bin": [
        "python.exe",
        "pythonw.exe",
        [
            "python.exe",
            "python3"
        ]
    ],
    "env_add_path": "scripts",
    "notes": "Currently conda envs activate and deactivate doesn't work on PowerShell, for workaround and more information, see: https://github.com/conda/conda/issues/626"
}

{
    "version": "5.0.0",
    "homepage": "https://www.anaconda.com/",
    "license": "BSD 3-Clause",
    "checkver": {
        "url": "https://repo.continuum.io/archive",
        "re": "Anaconda2-([\\d.]+)-Windows"
    },
    "architecture": {
        "64bit": {
            "url": "https://repo.continuum.io/archive/Anaconda2-5.0.0-Windows-x86_64.exe",
            "hash": "md5:8323b1d5f0b1c3fdb5b85efbb099beb0"
        },
        "32bit": {
            "url": "https://repo.continuum.io/archive/Anaconda2-5.0.0-Windows-x86.exe",
            "hash": "md5:bd3ed48229db828cef4c6b371a8759d1"
        }
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://repo.continuum.io/archive/Anaconda2-$version-Windows-x86_64.exe"
            },
            "32bit": {
                "url": "https://repo.continuum.io/archive/Anaconda2-$version-Windows-x86.exe"
            }
        },
        "hash": {
            "url": "$baseurl",
            "find": "$basename<.*\\s+<.*\\s+<.*\\s+<td>([a-fA-F0-9]{32})</td>"
        }
    },
    "installer": {
        "args": [
            "/S",
            "/InstallationType=JustMe",
            "/RegisterPython=0",
            "/AddToPath=0",
            "/D=$dir"
        ]
    },
    "uninstaller": {
        "file": "Uninstall-Anaconda.exe",
        "args": [
            "/S"
        ]
    },
    "bin": [
        "python.exe",
        "pythonw.exe",
        [
            "python.exe",
            "python2"
        ]
    ],
    "persist": [
        "envs"
    ],
    "env_add_path": "scripts",
    "notes": "Currently conda envs activate and deactivate doesn't work on PowerShell, for workaround and more information, see: https://github.com/conda/conda/issues/626"
}

{
    "version": "4.3.21",
    "homepage": "https://conda.io/miniconda.html",
    "license": "BSD 3-Clause",
    "checkver": {
        "url": "https://repo.continuum.io/miniconda",
        "re": "Miniconda2-([\\d.]+)-Windows"
    },
    "architecture": {
        "64bit": {
            "url": "https://repo.continuum.io/miniconda/Miniconda2-4.3.21-Windows-x86_64.exe",
            "hash": "md5:9c98e98931b952848c7372a63e04cdc7"
        },
        "32bit": {
            "url": "https://repo.continuum.io/miniconda/Miniconda2-4.3.21-Windows-x86.exe",
            "hash": "md5:49e26b862472a2e05d6b5954abcdb5c4"
        }
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://repo.continuum.io/miniconda/Miniconda2-$version-Windows-x86_64.exe"
            },
            "32bit": {
                "url": "https://repo.continuum.io/miniconda/Miniconda2-$version-Windows-x86.exe"
            }
        },
        "hash": {
            "url": "$baseurl",
            "find": "$basename<.*\\s+<.*\\s+<.*\\s+<td>([a-fA-F0-9]{32})</td>"
        }
    },
    "installer": {
        "args":[
            "/S",
            "/InstallationType=JustMe",
            "/RegisterPython=0",
            "/AddToPath=0",
            "/D=$dir"
            ]
    },
    "uninstaller":{
        "file":"Uninstall-Anaconda.exe",
        "args":[
            "/S"
        ]
    },
    "bin": [
        "python.exe",
        "pythonw.exe",
        [
            "python.exe",
            "python2"
        ]
    ],
    "env_add_path": "scripts",
    "notes": "Currently conda envs activate and deactivate doesn't work on PowerShell, for workaround and more information, see: https://github.com/conda/conda/issues/626"
}

            "hash": "33a7e5a66ae8c6ad908932fd97ee972b0eafcaafc05c70dd62fb7acb8ef22b44"
        },
        "32bit": {
            "url": "https://download.mozilla.org/?product=firefox-62.0.3-SSL&os=win&lang=zh-CN#/firefox.7z",
